/* pages/details/index.wxss */

.details-dec {
  font-size: 28rpx;
  color: #8c98ae;
  margin-top: 15rpx;
  padding: 0rpx 0rpx 0rpx 6rpx !important;
}

.font-break {
  word-break:break-all;
}

.container{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  flex-wrap: wrap;
}

.tag{
  margin: 15rpx 15rpx 6rpx 6rpx !important;
}

.header {
  font-size: 28rpx;
  height: 228rpx;
  width: 750rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  background: #3683d6;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 228rpx;
  z-index: 1;
}

.header-desc {
  position: absolute;
  z-index: 2;
  font-size: 28rpx;
  margin: 60rpx 0 0 60rpx;
  line-height: 48rpx;
}

.header-name {
  font-size: 32rpx;
}

.adContainer {
  width: 100%;
}