 /**index.wxss**/
.a{
  width: 46.875rpx;
  height: 20px;
  background: rebeccapurple;
  margin: 0 0 50rpx 50rpx;
}

page {
  background: #f7f7f7;
}

.container {
  min-height: 100vh;
  width: 100%;
  background: #f7f7f7;
  padding-bottom: 60rpx;
}

.header {
  font-size: 28rpx;
  height: 228rpx;
  width: 750rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  background: #3683d6;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 228rpx;
  z-index: 1;
}

.header-desc {
  position: absolute;
  z-index: 2;
  font-size: 28rpx;
  margin: 60rpx 0 0 60rpx;
  line-height: 48rpx;
}

.header-name {
  font-size: 32rpx;
}

.main {
  display: flex;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 0 auto;
  flex-direction: row;
  justify-content: space-between;
}

.shop-card {
  padding: 30rpx 40rpx !important;
  margin-top: 30rpx !important;
  margin-bottom: 40rpx !important;
}

.card-img {
  width: 0rpx !important;
  height: 100rpx !important;
}

.card-title {
  color: #3963bc !important;
}

.shop-dec {
  font-size: 28rpx;
  color: #8c98ae;
  margin-top: 15rpx;
}

.num {
  color: #fc6517;
  font-size: 42rpx;
  font-style: italic;
}

.text {
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 46rpx;
  margin-top: 9rpx;
}

.grid-item {
  height: 200rpx;
} 

.see-more{
  font-size: 32rpx;
  text-align: center;
  color: #3963bc;
}

.see-details{
  color    : #8c98ae;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.button-size{
  margin-right: 30rpx;
  margin-left: 30rpx;
  margin-top: 60rpx;
}

image {
  width: 82rpx;
  height: 82rpx;
  display: inline-block;
  overflow: hidden;
}

.ellipsis{
  width:200rpx; 
  height: 36rpx;
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap; 
  word-break:keep-all; 
}

.goTop{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 345rpx;
  background: rgba(0,0,0,.3);
  right: 55rpx;
  border-radius: 50%;
}

.goBottom{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 225rpx;
  background: rgba(0,0,0,.3);
  right: 55rpx;
  border-radius: 50%;
}

